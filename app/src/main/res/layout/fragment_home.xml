<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_gradient"
    android:fitsSystemWindows="true"
    tools:context=".HomeFragment">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ethics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Glowing background orb (soft halo) -->
    <ImageView
        android:id="@+id/glowOrb"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/orb_gradient"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Animated orb (rotates + pulses) -->
    <ImageView
        android:id="@+id/animatedOrb"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/orb_gradient"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- "Work your moral muscle" text -->
    <ImageView
        android:id="@+id/quoteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Work your moral muscle text"
        android:src="@drawable/moral_muscle"
        app:layout_constraintTop_toTopOf="@id/animatedOrb"
        app:layout_constraintBottom_toBottomOf="@id/animatedOrb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/enter_button_bg"
        android:text="Enter"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/courtesyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glowOrb" />

    <TextView
        android:id="@+id/courtesyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="Courtesy of Dr. Shannon Vallor, Edinburgh Futures Institute, University of Edinburgh"
        android:textColor="#C0D6FF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



