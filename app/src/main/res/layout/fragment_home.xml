<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_gradient"
    tools:context=".HomeFragment">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ethics"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Glowing orb background -->
    <View
        android:id="@+id/glowOrb"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/orb_gradient"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Main quote text -->
    <TextView
        android:id="@+id/quoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work your moral muscle"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:fontFamily="@font/logo_font"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@id/glowOrb"
        app:layout_constraintBottom_toBottomOf="@id/glowOrb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Courtesy credit -->
    <TextView
        android:id="@+id/courtesyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courtesy of Dr. Shannon Vallor, Edinburgh Futures Institute, University of Edinburgh"
        android:textColor="#C0D6FF"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

