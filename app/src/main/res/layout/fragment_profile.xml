<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_gradient"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data Submission and Storing Test"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ENTRY 1 -->
        <EditText
            android:id="@+id/entry1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Entry 1"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBD7FF"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- ENTRY 2 -->
        <EditText
            android:id="@+id/entry2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Entry 2"
            android:padding="12dp"
            android:background="@drawable/rounded_input"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBD7FF"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/entry1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- STORE BUTTON (white) -->
        <Button
            android:id="@+id/store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Store"
            android:textColor="#0A1A2F"
            android:background="@drawable/rounded_button_white"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/entry2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <!-- STORED TEXT -->
        <TextView
            android:id="@+id/tvTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stored text will appear here"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="16sp"
            android:alpha="0.8"
            app:layout_constraintTop_toBottomOf="@id/store"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" />

        <!-- RETRIEVE BUTTON (white) -->
        <Button
            android:id="@+id/retrieve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Retrieve"
            android:textColor="#0A1A2F"
            android:background="@drawable/rounded_button_white"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>


