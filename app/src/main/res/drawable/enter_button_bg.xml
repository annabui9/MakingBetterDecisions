<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft lavender gradient -->
    <gradient
        android:startColor="#E8D9FF"
        android:endColor="#C7B0FF"
        android:angle="270" />

    <!-- Soft rounded edges -->
    <corners android:radius="28dp"/>

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#40FFFFFF" />

    <!-- Padding for nice spacing -->
    <padding
        android:left="18dp"
        android:top="12dp"
        android:right="18dp"
        android:bottom="12dp"/>

</shape>

