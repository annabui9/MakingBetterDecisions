<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft white gradient for dimension -->
    <gradient
        android:startColor="#FFFFFF"
        android:endColor="#F5F5F5"
        android:angle="270" />

    <!-- Soft rounded edges -->
    <corners android:radius="28dp"/>

    <!-- Very subtle border (barely visible) -->
    <stroke
        android:width="1dp"
        android:color="#30FFFFFF" />

    <!-- Spacing to match your original padding -->
    <padding
        android:left="18dp"
        android:top="12dp"
        android:right="18dp"
        android:bottom="12dp"/>
</shape>

